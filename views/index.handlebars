<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search">search</i></button>
          </div>
        </div>
      </form>
      <form class="mt-2" action="/search/catagory">
        <button name="sampleName" value="中東料理">中東料理</button>
        <button name="sampleName" value="日本料理">日本料理</button>
        <button name="sampleName" value="義式餐廳">義式餐廳</button>
      </form>


    </div>
  </div>
</div>


<!-- restaurant list -->
<div class=" container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row card-columns">
        {{#each lists}}
        <div class="col-sm-4">
          <a href="/restaurants/{{this.id}}" class="text-secondary">
            <div class="card sm-3">
              <img class="card-img-top" src="{{this.image}}" alt="Sababa 沙巴巴中東美食">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>
                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>
                <span class="badge badge-pill badge-danger font-weight-normal">
                  <i class="fas fa-star fa-xs">rating:{{this.rating}}</i>
                </span>
              </div>
              <a href="/restaurants/{{this.id}}/detail" class="d-block">detail</a>
              <a href="/restaurants/{{this.id}}/edit" class="d-block">edit</a>
              <form action="/restaurants/{{this.id}}/delete" method="POST">
                <button type="submit">delete</button>
              </form>
            </div>
          </a>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>